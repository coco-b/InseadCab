{% extends 'base.html.twig' %}

{% block body %}
    <h1>Trips list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Departure</th>
                <th>Arrival</th>
                <th>Date</th>
                <th>Time</th>
                <th>Spots</th>
                <th>Cost</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trip in trips %}
            <tr>
                <td><a href="{{ path('trip_show', { 'id': trip.id }) }}">{{ trip.id }}</a></td>
                <td>{{ trip.name }}</td>
                <td>{{ trip.departure }}</td>
                <td>{{ trip.arrival }}</td>
                <td>{% if trip.date %}{{ trip.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ trip.time }}</td>
                <td>{{ trip.spots }}</td>
                <td>{{ trip.cost }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('trip_show', { 'id': trip.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('trip_edit', { 'id': trip.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('trip_new') }}">Create a new trip</a>
        </li>
    </ul>
{% endblock %}
